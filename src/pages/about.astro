---
/**
 * About Page
 *
 * Showcases LEXGRO's mission, Keith Dyer's bio, and company values.
 * Designed to build trust and demonstrate expertise.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Images
import keithPhoto from '../assets/images/sections/keith-cmo-photo.png';
import aboutEditorial from '../assets/images/editorial/about.png';
import heroBackground from '../assets/images/heroes/about-hero.jpg';


// Google Reviews - all reviews from Google Business Profile (5.0 rating, 13 reviews)
const googleReviews = [
  {
    name: 'Jordan Ostroff',
    quote: 'Keith knows his stuff! It\'s so amazing to see people who offer marketing strategy without being forced to sell you something they offer. I wish I had spoken with Keith many years ago before I blew hundreds of thousands of dollars.',
    rating: 5,
  },
  {
    name: 'Anthony Bux',
    quote: 'Keith and the Lexgro team are fantastic. They are dialed in with their reporting and understand what it takes to scale a practice efficiently in the personal injury field.',
    rating: 5,
  },
  {
    name: 'David Arato',
    quote: 'Keith is an expert in law firm marketing who has a deep understanding of the issues unique to the legal industry. I had a fantastic time on his podcast and would recommend him to anyone looking to grow their practice.',
    rating: 5,
  },
  {
    name: 'Andrew Ayers',
    quote: 'I spoke with the Lexgro team and was impressed by how well they understand law firm marketing specifically, not generic digital marketing. The conversation was strategic, thoughtful, and focused on systems, intake, and long-term growth.',
    rating: 5,
  },
  {
    name: 'David Yarr',
    quote: 'Lexgro is a fantastic partner, and easy to work with. Their commitment to delivering quality legal services makes every collaboration seamless. Highly recommended.',
    rating: 5,
  },
  {
    name: 'Lee Rudin',
    quote: 'Working with Keith and the LEXGRO team was seamless. I felt well prepared for our discussion and would recommend the experience to others without hesitation.',
    rating: 5,
  },
  {
    name: 'Michael Templeton',
    quote: 'My business partner and I just completed the taping of a podcast episode. It flowed as if Keith had prepared for days. Keith is a professional and will treat you with kindness and respect.',
    rating: 5,
  },
  {
    name: 'Whitney Norris',
    quote: 'The Circle of Trust Podcast provides relevant, valuable insights in how to manage, grow, and scale your law firm like a business. Definitely worth following their topics for helpful tips, especially regarding marketing strategies.',
    rating: 5,
  },
  {
    name: 'Damon Hudson',
    quote: 'Keith is a great guy who is definitely determined to help those around him, especially his clients!',
    rating: 5,
  },
  {
    name: 'Patrick McEuen',
    quote: 'Enjoyed collaborating with Keith and the rest of his team. Law firm marketing is a different beast!',
    rating: 5,
  },
  {
    name: 'Allison Mahoney',
    quote: 'Keith and LEXGRO are marketing experts and genuinely interested in helping law firms grow.',
    rating: 5,
  },
  {
    name: 'Matthew Bourhis',
    quote: 'Great podcast, really enjoyed participating with all the thoughtful questions and professional marketing services.',
    rating: 5,
  },
  {
    name: 'Chaitin Maycott',
    quote: 'Keith and his team are professionals who know what it takes to get the job done with results in mind.',
    rating: 5,
  },
];

const totalGoogleReviews = googleReviews.length;
const googleRating = 5.0;

// Top 3 featured reviews for display (most substantive)
const featuredReviews = googleReviews.slice(0, 3);

const reviewSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "LEXGRO",
  "description": "Fractional CMO and marketing leadership for law firms.",
  "url": "https://lexgro.com",
  "image": "https://lexgro.com/og/about.png",
  "telephone": "+1-336-337-2674",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "300 N 3rd St Suite 220",
    "addressLocality": "Wilmington",
    "addressRegion": "NC",
    "postalCode": "28401",
    "addressCountry": "US"
  },
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
    "opens": "09:00",
    "closes": "17:00"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": String(googleRating),
    "bestRating": "5",
    "worstRating": "1",
    "reviewCount": String(totalGoogleReviews),
    "ratingCount": String(totalGoogleReviews)
  },
  "review": googleReviews.map(r => ({
    "@type": "Review",
    "author": { "@type": "Person", "name": r.name },
    "reviewRating": { "@type": "Rating", "ratingValue": String(r.rating), "bestRating": "5" },
    "reviewBody": r.quote,
  }))
};

const stats = [
  { value: '$3M → $11M', label: 'Revenue Growth Achieved' },
  { value: '100+', label: 'Law Firms Served' },
  { value: '6+', label: 'Practice Areas' },
  { value: '15+', label: 'Years Experience' },
];

const values = [
  {
    title: 'Aligned Interests Above All',
    description: 'We succeed when you succeed. We tie our incentives to your outcomes, not vanity metrics.',
    icon: 'handshake',
  },
  {
    title: 'Objectivity Over Ego',
    description: 'We tell you what works, even when it\'s not what you want to hear.',
    icon: 'eye',
  },
  {
    title: 'Execution Is the Strategy',
    description: 'Plans are worthless without implementation. We don\'t just consult. we do the work.',
    icon: 'wrench',
  },
  {
    title: 'Accountability Through Data',
    description: 'We ground every recommendation in performance. We measure, adjust, and optimize.',
    icon: 'chart',
  },
  {
    title: 'Ethical Conduct, Always',
    description: 'No misleading claims. No inflated promises. No cutting corners.',
    icon: 'shield',
  },
  {
    title: 'Respect for People',
    description: 'We honor your time, your team, and your vision for your firm.',
    icon: 'users',
  },
  {
    title: 'Trusted Partners Only',
    description: 'We only recommend vendors, employees, and tools we\'ve personally vetted.',
    icon: 'check-circle',
  },
  {
    title: 'Professional Communication',
    description: 'Clear, timely, and actionable updates. always.',
    icon: 'message',
  },
  {
    title: 'Intentional Growth',
    description: 'Growth for growth\'s sake is chaos. We build for scale, durability, and long-term value.',
    icon: 'target',
  },
];

const expertise = [
  'Law Firm Marketing Strategy',
  'Fractional CMO Services',
  'SEO and Content Marketing',
  'PPC and Media Buying',
  'Intake Optimization',
  'Team Training and Development',
  'Vendor Management',
  'Marketing ROI Analysis',
];
---

<BaseLayout
  title="About Keith Dyer and LEXGRO"
  description="Meet Keith Dyer, founder of LEXGRO. 12+ years helping law firms grow with fractional CMO services, marketing strategy, and proven results across 200+ firms."
  image="/og/about.png"
>
  <!-- Review + LocalBusiness Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(reviewSchema)} />

  <!-- Hero Section -->
  <section class="about-hero">
    <Image
      src={heroBackground}
      alt=""
      class="hero-bg"
      widths={[800, 1200, 1920]}
      sizes="100vw"
      loading="eager"
    />
    <div class="hero-overlay"></div>
    <div class="container hero-container">
      <div class="hero-content">
        <span class="section-label">About LEXGRO</span>
        <h1 class="hero-title">Stop Guessing.<br />Start Leading.</h1>
        <p class="hero-subtitle">
          Predictable, durable growth for law firms. No guesswork. No wasted spend. No revolving door of agencies that don't understand your business.
        </p>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission-section">
    <div class="container">
      <div class="mission-layout">
        <div class="mission-content">
          <span class="section-label">Our Mission</span>
          <h2 class="section-title-left">Build Predictable, Durable Growth</h2>
          <p class="mission-text">
            LEXGRO helps law firms build predictable, durable growth by aligning strategy,
            execution, and accountability under one system. Unlike traditional agencies that
            operate at arm's length, we work as an embedded partner.
          </p>
          <p class="mission-text highlight-text">
            When you win, we win. It's that simple.
          </p>
          <div class="vision-block">
            <span class="vision-label">Our Vision</span>
            <p class="vision-text">
              To become the most trusted growth partner in legal marketing. known for
              honest advice, deep expertise, and measurable results.
            </p>
          </div>
          <div class="mission-cta">
            <a href="/contact/" class="btn btn-primary">Start a Conversation</a>
          </div>
        </div>
        <div class="mission-image">
          <Image
            src={aboutEditorial}
            alt="Professional law firm office"
            class="editorial-image"
            width={560}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        {stats.map((stat) => (
          <div class="stat-item">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Keith Bio Section -->
  <section class="bio-section">
    <div class="container">
      <div class="bio-layout">
        <div class="bio-image-wrapper">
          <Image
            src={keithPhoto}
            alt="Keith Dyer - President and Fractional CMO at LEXGRO"
            class="bio-image"
            width={400}
          />
          <div class="bio-image-accent"></div>
        </div>
        <div class="bio-content">
          <span class="section-label">Meet the Founder</span>
          <h2 class="bio-name">Keith Dyer</h2>
          <p class="bio-title">President and Fractional Chief Marketing Officer</p>

          <div class="bio-text">
            <p>
              Keith Dyer is President and Fractional Chief Marketing Officer at LEXGRO,
              the law firm CMO. With battle-tested strategies developed from years of
              hands-on implementation, Keith has helped law firms achieve consistent case
              generation and predictable revenue growth.
            </p>
            <p>
              His approach combines strategic marketing leadership with practical
              implementation. Not just advice, but real execution that delivers measurable results.
            </p>
            <p>
              Keith's expertise spans the full spectrum of law firm marketing: SEO, PPC,
              media buying, intake optimization, and team training. He has personally helped
              scale law firms from $3M to $11M in revenue and coaches attorneys through
              LEXGRO's Certified Law Firm Marketing Professional™ program.
            </p>
          </div>

          <div class="expertise-list">
            <h3 class="expertise-heading">Areas of Expertise</h3>
            <div class="expertise-tags">
              {expertise.map((item) => (
                <span class="expertise-tag">{item}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="values-section">
    <div class="container">
      <div class="values-header">
        <span class="section-label">Our Core Values</span>
        <h2 class="section-title">The Principles That Drive Everything We Do</h2>
        <p class="section-subtitle">
          These aren't just words on a wall. They're how we make decisions, treat clients, and hold ourselves accountable.
        </p>
      </div>

      <div class="values-grid">
        {values.map((value, index) => (
          <div class="value-card">
            <div class={`value-icon value-icon-${(index % 9) + 1}`}>
              {value.icon === 'handshake' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.42 4.58a5.4 5.4 0 0 0-7.65 0l-0.77.78-0.77-0.78a5.4 5.4 0 0 0-7.65 0C1.46 6.7 1.33 10.28 4 13l8 8 8-8c2.67-2.72 2.54-6.3.42-8.42z"></path>
                </svg>
              )}
              {value.icon === 'eye' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              )}
              {value.icon === 'wrench' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                </svg>
              )}
              {value.icon === 'chart' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="20" x2="18" y2="10"></line>
                  <line x1="12" y1="20" x2="12" y2="4"></line>
                  <line x1="6" y1="20" x2="6" y2="14"></line>
                </svg>
              )}
              {value.icon === 'shield' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              )}
              {value.icon === 'users' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              )}
              {value.icon === 'check-circle' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
              )}
              {value.icon === 'message' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
              )}
              {value.icon === 'target' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <circle cx="12" cy="12" r="6"></circle>
                  <circle cx="12" cy="12" r="2"></circle>
                </svg>
              )}
            </div>
            <h3 class="value-title">{value.title}</h3>
            <p class="value-description">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Google Reviews Section -->
  <section class="reviews-section">
    <div class="container">
      <div class="reviews-header">
        <div class="google-badge">
          <svg class="google-icon" width="24" height="24" viewBox="0 0 24 24">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          <span class="google-text">Google Reviews</span>
        </div>
        <div class="rating-summary">
          <span class="rating-number">{googleRating}</span>
          <div class="rating-stars">
            {[1,2,3,4,5].map(() => (
              <svg class="star-icon" width="20" height="20" viewBox="0 0 24 24" fill="#FBBC05">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
            ))}
          </div>
          <span class="review-count">{totalGoogleReviews} reviews</span>
        </div>
      </div>

      <!-- Featured Reviews (top 3) -->
      <div class="reviews-grid">
        {featuredReviews.map((review) => (
          <div class="review-card">
            <div class="review-stars">
              {[1,2,3,4,5].map(() => (
                <svg width="16" height="16" viewBox="0 0 24 24" fill="#FBBC05">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              ))}
            </div>
            <p class="review-text">"{review.quote}"</p>
            <div class="review-author">
              <div class="review-avatar">{review.name.charAt(0)}</div>
              <span class="review-name">{review.name}</span>
            </div>
          </div>
        ))}
      </div>

      <!-- Scrolling review ticker with remaining reviews -->
      <div class="reviews-ticker-wrapper">
        <div class="reviews-ticker">
          {googleReviews.slice(3).map((review) => (
            <div class="ticker-review">
              <div class="ticker-stars">
                {[1,2,3,4,5].map(() => (
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="#FBBC05">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                ))}
              </div>
              <p class="ticker-text">"{review.quote}"</p>
              <span class="ticker-author">— {review.name}</span>
            </div>
          ))}
          {googleReviews.slice(3).map((review) => (
            <div class="ticker-review" aria-hidden="true">
              <div class="ticker-stars">
                {[1,2,3,4,5].map(() => (
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="#FBBC05">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                ))}
              </div>
              <p class="ticker-text">"{review.quote}"</p>
              <span class="ticker-author">— {review.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section class="location-section">
    <div class="container">
      <div class="location-layout">
        <div class="location-info">
          <span class="section-label">Our Office</span>
          <h2 class="location-title">Wilmington, NC</h2>
          <div class="location-details">
            <div class="location-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <div>
                <p class="detail-primary">300 N 3rd St, Suite 220</p>
                <p class="detail-secondary">Wilmington, NC 28401</p>
              </div>
            </div>
            <div class="location-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              <div>
                <p class="detail-primary">(336) 337-2674</p>
                <p class="detail-secondary">Mon-Fri 9AM - 5PM ET</p>
              </div>
            </div>
          </div>
          <a href="/contact/" class="btn btn-primary location-cta">Get in Touch</a>
        </div>
        <div class="location-map">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3291.5!2d-77.9447!3d34.2358!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzTCsDE0JzA4LjkiTiA3N8KwNTYnNDAuOSJX!5e0!3m2!1sen!2sus!4v1"
            width="100%"
            height="100%"
            style="border:0; border-radius: 16px;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="LEXGRO Office - Wilmington, NC"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Grow?</h2>
        <p class="cta-subtitle">
          Let's talk about how LEXGRO can help your law firm achieve predictable,
          sustainable growth.
        </p>
        <div class="cta-buttons">
          <a href="/contact/" class="btn btn-primary btn-lg">
            Schedule a Strategy Call
          </a>
          <a href="/contact/" class="btn btn-secondary btn-lg">
            Send Us a Message
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .about-hero {
    position: relative;
    padding: 5rem 1.5rem 4rem;
    background: var(--color-bg-dark);
    text-align: center;
    overflow: hidden;
    min-height: 380px;
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 0;
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to right,
      rgba(1, 25, 7, 0.85) 0%,
      rgba(1, 25, 7, 0.78) 40%,
      rgba(1, 25, 7, 0.68) 100%
    );
  }
  .hero-container {
    position: relative;
    z-index: 2;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: clamp(2.25rem, 5vw, 3.75rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: white;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #b0b8b3;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Section Labels */
  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
