---
import { getCollection, render } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  return posts.map((entry) => {
    // Find related posts based on matching tags OR category
    const currentTags = entry.data.tags || [];
    const currentCategory = entry.data.category;

    const scoredPosts = posts
      .filter(p => p.data.slug !== entry.data.slug) // Exclude current post
      .map(p => {
        const postTags = p.data.tags || [];
        const matchingTags = currentTags.filter(tag => postTags.includes(tag)).length;
        const sameCategory = p.data.category === currentCategory ? 2 : 0; // Bonus for same category
        return { post: p, score: matchingTags + sameCategory };
      })
      .sort((a, b) => b.score - a.score) // Sort by highest score
      .slice(0, 3) // Take top 3
      .map(item => ({
        title: item.post.data.title,
        slug: item.post.data.slug,
        category: item.post.data.category,
        description: item.post.data.description
      }));

    // If we don't have 3, fill with recent posts
    const relatedPosts = scoredPosts.length >= 3 ? scoredPosts : [
      ...scoredPosts,
      ...posts
        .filter(p => p.data.slug !== entry.data.slug && !scoredPosts.find(sp => sp.slug === p.data.slug))
        .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
        .slice(0, 3 - scoredPosts.length)
        .map(p => ({
          title: p.data.title,
          slug: p.data.slug,
          category: p.data.category,
          description: p.data.description
        }))
    ];

    return {
      params: { slug: entry.data.slug },
      props: { entry, relatedPosts },
    };
  });
}

const { entry, relatedPosts } = Astro.props;
const { Content } = await render(entry);

// Calculate reading time if not provided (approx 200 words per minute)
function calculateReadingTime(content: string): string {
  const text = content.replace(/<[^>]*>/g, ''); // Strip HTML
  const words = text.split(/\s+/).length;
  const minutes = Math.ceil(words / 200);
  return `${minutes} min read`;
}

// Use provided reading time or default
const readingTime = entry.data.readingTime || '5 min read';
---

<BlogLayout
  title={entry.data.title}
  description={entry.data.description}
  author={entry.data.author}
  pubDate={entry.data.pubDate}
  updatedDate={entry.data.updatedDate}
  heroImage={`/og/blog/${entry.data.slug}.png`}
  tags={entry.data.tags}
  slug={entry.data.slug}
  category={entry.data.category}
  readingTime={readingTime}
  relatedPosts={relatedPosts}
>
  <Content />
</BlogLayout>
