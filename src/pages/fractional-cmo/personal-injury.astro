/**
 * Fractional CMO for Personal Injury Law Firms
 *
 * Practice-specific conversion page with PI benchmarks, pain points,
 * and data-backed value proposition. Uses real Perplexity research data.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';

// JSON-LD Service Schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Fractional CMO for Personal Injury Law Firms",
  "description": "Strategic marketing leadership for PI firms. Reduce cost per lead, optimize intake, and build predictable case flow.",
  "provider": {
    "@type": "Organization",
    "name": "LEXGRO",
    "url": "https://lexgro.com"
  },
  "serviceType": "Fractional CMO",
  "areaServed": "US",
  "audience": {
    "@type": "Audience",
    "audienceType": "Personal Injury Law Firms"
  }
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does a fractional CMO cost for a PI firm?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "A fractional CMO typically costs 70% less than a full-time hire. Full-time CMOs run $300K+ annually. Fractional engagement starts at a fraction of that, with most PI firms investing $8K-$15K monthly for senior-level marketing leadership."
      }
    },
    {
      "@type": "Question",
      "name": "What results can a PI firm expect from a fractional CMO?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Industry data shows law firms with fractional CMOs grow 3x faster than firms without marketing leadership. PI firms typically see 40% lower client acquisition costs and 2-3x growth in signed cases within 9 months through full-funnel optimization."
      }
    },
    {
      "@type": "Question",
      "name": "How is a fractional CMO different from a marketing agency?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "An agency executes tactics. A fractional CMO owns the strategy. They sit in your leadership meetings, manage your vendors, track cost per signed case by channel, and make budget decisions based on data. They are accountable for revenue growth, not activity metrics."
      }
    },
    {
      "@type": "Question",
      "name": "How long does it take to see results?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Quick wins typically appear within 90 days through intake optimization and paid channel restructuring. Significant revenue impact (300% ROI) usually materializes within 18-24 months as SEO, content, and referral channels compound."
      }
    }
  ]
};
